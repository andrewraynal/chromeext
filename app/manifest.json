{
    "name": "Audiolix",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Lixit",
    "icons": {
        "128": "images/lix.png",
        "38": "images/lix_small.png",
        "19": "images/lix_smallest.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "scripts/background.js"
        ]
    },
  "browser_action": {
    "default_icon": {
      "19": "images/lix_smallest.png"
    },

    "default_title": "Audiolix",
    "default_popup": "popup.html"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",  
    
  "omnibox": {
    "keyword": "Audiolix"
  },
  "permissions": [
  "http://*.google.com/",
  "http://ws.audioscrobbler.com/"
  ]
}
